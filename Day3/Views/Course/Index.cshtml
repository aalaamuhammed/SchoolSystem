@model IEnumerable<Day3.Models.Course>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CrsName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CrsName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.CrsId">Edit</a> |
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.CrsId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CrsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
